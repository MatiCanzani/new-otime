<footer class="relative bg-white">
  <!-- Fondo blanco -->
  <div class="absolute inset-0 bg-white" style="will-change: background;"></div>

  <div class="relative container mx-auto px-6 md:px-20 py-16 max-w-7xl">
    <!-- Título y textos -->
    <div class="mb-12 max-w-4xl">
      <h1 class="text-5xl md:text-6xl font-extrabold mb-4 leading-tight">
        AT ONTIME
        <sup class="text-mostard align-super ml-1 text-4xl">✲</sup> WE BELIEVE IN
      </h1>
      <div class="space-y-2 text-lg text-gray-700 font-medium">
        <p>Daring creativity that makes a statement</p>
        <p>Seamless fusion of design and motion</p>
        <p>Collaborative partnerships with our clients</p>
      </div>
    </div>

    <!-- CTA -->
    <div class="mb-12">
      <a
        href="/contact"
        class="inline-flex items-center space-x-3 font-semibold text-grape hover:text-yellow-500 transition"
        aria-current="page"
      >
        <span>● Let’s create something awesome</span>
        <span class="text-2xl">↠</span>
      </a>
    </div>

    <hr class="border-gray-200 mb-12" />

    <!-- Columnas -->
    <div class="flex flex-col md:flex-row gap-12 md:gap-24">
      <!-- Contacto -->
      <div class="flex-1">
        <h2 class="text-2xl font-semibold mb-4">Contact us</h2>
        <div class="flex flex-col space-y-3 mb-6">
          <a
            href="mailto:ONTIME@ontime.com"
            class="text-xl font-semibold text-mostard hover:underline"
            >ONTIME@ontime.com</a
          >
          <a
            href="tel:+33381262626"
            class="text-xl font-semibold text-mostard hover:underline"
            >+54 9 11 4143-0471</a
          >
        </div>
        <div class="space-y-2 text-sm text-gray-500">
          <div>2025 — ONTIME<sup class="text-mostard">✲</sup></div>
        </div>
      </div>

      <!-- Sitemap -->
      <div class="flex-1">
        <h3 class="text-xl font-semibold mb-4">Sitemap</h3>
        <nav class="flex flex-col space-y-2 text-sm text-gray-600">
          <a href="/" class="hover:underline">Home</a>
          <a href="/about" class="hover:underline">About Us</a>
          <a href="/services" class="hover:underline">Services</a>
          <a href="/projects" class="hover:underline">Projects</a>
          <a href="/contact" class="hover:underline">Contact Us</a>
          <a
            href="/contact"
            class="text-mostard font-semibold"
            aria-current="page">Contact</a
          >
        </nav>
      </div>

      <!-- Socials -->
      <div class="flex-1">
        <h3 class="text-xl font-semibold mb-4">Socials</h3>
        <nav class="flex flex-col space-y-2 text-sm text-gray-600">
          <a href="#" class="hover:underline">Instagram</a>
        </nav>
      </div>
    </div>
  </div>
</footer>
