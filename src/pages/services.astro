---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Services">
  <section id="services" class="py-24 bg-white font-suisse">
    <div class="max-w-7xl mx-auto px-6 text-center">
      <h2 class="text-3xl md:text-4xl
font-semibold text-gray-900 mb-12">
        Our Services
      </h2>
      <div class="grid
grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-12">
        <div class="bg-gray-100 p-8
rounded-lg shadow-lg">
          <div class="mb-4">
            <img
              src="/path/to/icon1.png"
              alt="Service 1"
              class="h-12 mx-auto"
            />
          </div>
          <h3 class="text-xl font-semibold
text-gray-900 mb-4">Web Design</h3>
          <p class="text-lg text-gray-600">
            Creating beautiful, user-friendly websites that deliver results.
          </p>
        </div>
        <div class="bg-gray-100 p-8 rounded-lg shadow-lg">
          <div class="mb-4">
            <img
              src="/path/to/icon2.png"
              alt="Service 2"
              class="h-12 mx-auto"
            />
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-4">Development</h3>
          <p class="text-lg text-gray-600">
            Building fast, responsive websites that perform at scale.
          </p>
        </div>
        <div class="bg-gray-100 p-8 rounded-lg shadow-lg">
          <div class="mb-4">
            <img
              src="/path/to/icon3.png"
              alt="Service 3"
              class="h-12 mx-auto"
            />
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-4">Branding</h3>
          <p class="text-lg text-gray-600">
            Crafting strong brand identities that connect with audiences.
          </p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
