---
import PagesLayout from "../layouts/PagesLayout.astro";

/**
 * About page (Who We Are) inspired by the LeStudio template.  This page
 * introduces your studio, showcases the team, explains your design
 * philosophy and highlights the services you provide.  Use external
 * Unsplash images or your own assets to represent your team.
 */

const team = [
  {
    name: "Jean Dupont",
    role: "Creative Director",
    image:
      "https://images.unsplash.com/photo-1529626455594-4ff0802cfb7e?auto=format&fit=crop&w=400&q=80",
  },
  {
    name: "Jane Morvíc",
    role: "Brand Designer",
    image:
      "https://images.unsplash.com/photo-1524504388940-b1c1722653e1?auto=format&fit=crop&w=400&q=80",
  },
  {
    name: "Quentin Dupontet",
    role: "Digital Designer",
    image:
      "https://images.unsplash.com/photo-1529626455594-4ff0802cfb7e?auto=format&fit=crop&w=400&q=80",
  },
  {
    name: "Snoopy",
    role: "The GOAT",
    image:
      "https://images.unsplash.com/photo-1601924582975-7c5697b4aa94?auto=format&fit=crop&w=400&q=80",
  },
];

const approach = [
  {
    title: "Deep Dive Discovery",
    description:
      "We begin every project by immersing ourselves in your brand's world. Through in‑depth conversations and research, we uncover the essence of your vision and the unique challenges you face.",
  },
  {
    title: "Strategic Creativity",
    description:
      "Our team of designers and strategists work in tandem to develop concepts that are not just visually striking but also aligned with your business goals. We don't just create pretty pictures.",
  },
  {
    title: "Refined Execution",
    description:
      "Drawing inspiration from Paris's rich artistic legacy and cutting‑edge trends, we push boundaries while maintaining a keen eye for detail. Our designs are bold yet refined, leaving a lasting impression on your audience.",
  },
  {
    title: "Immersive Motion Integration",
    description:
      "We believe that motion brings designs to life. From subtle animations to full‑scale video productions, we seamlessly integrate movement to create immersive, engaging experiences.",
  },
  {
    title: "Collaborative Iteration",
    description:
      "Your input is vital to our process. We maintain open lines of communication throughout the project, refining and iterating based on your feedback to ensure the final product exceeds your expectations.",
  },
  {
    title: "Measurable Impact",
    description:
      "We don't just deliver and disappear. We provide you with the tools and insights to measure the impact of our work, ensuring that our creative solutions drive real results for your business.",
  },
];

const services = [
  {
    title: "Art direction",
    items: ["Campaign Concepts", "Photoshoot", "Consulting"],
  },
  {
    title: "Branding",
    items: ["Identity", "Strategy", "Evolution"],
  },
  {
    title: "Digital design",
    items: ["Website", "Mobile app", "Interactive experiences"],
  },
  {
    title: "Print design",
    items: ["Brochure and catalog", "Packaging", "Poster"],
  },
];
---

<PagesLayout title="Who We Are">
  <!-- Hero section -->
  <section class="text-center py-20 px-4">
    <h1 class="text-5xl md:text-6xl font-bold mb-6">
      Where creativity✲ knows no bounds
    </h1>
    <p class="max-w-3xl mx-auto text-lg text-gray-600">
      From the heart of Paris to screens worldwide, we craft visual
      experiences that captivate, inspire and leave a lasting
      impression. Our passion for innovation and attention to detail
      shine through in every project, big or small.
    </p>
  </section>

  <!-- Team section -->
  <section class="bg-gray-100 py-16">
    <h2 class="text-3xl md:text-4xl font-semibold text-center mb-12">
      Meet our awesome✲ team/
    </h2>
    <div class="max-w-7xl mx-auto grid gap-10 sm:grid-cols-2 lg:grid-cols-4 px-6">
      {team.map((member) => (
        <div class="text-center" key={member.name}>
          <img
            src={member.image}
            alt={member.name}
            class="w-40 h-40 object-cover rounded-full mx-auto mb-4"
            loading="lazy"
          />
          <h3 class="text-xl font-bold mb-1">{member.name}</h3>
          <p class="text-gray-600">{member.role}</p>
        </div>
      ))}
    </div>
  </section>

  <!-- Approach section -->
  <section class="py-16 px-4">
    <h2 class="text-3xl md:text-4xl font-semibold text-center mb-12">
      Our approach
    </h2>
    <div class="max-w-5xl mx-auto grid gap-10 md:grid-cols-2">
      {approach.map((step) => (
        <div key={step.title}>
          <h3 class="text-2xl font-bold mb-2">{step.title}</h3>
          <p class="text-gray-600">{step.description}</p>
        </div>
      ))}
    </div>
  </section>

  <!-- Services summary section -->
  <section class="bg-gray-100 py-16 px-4">
    <h2 class="text-3xl md:text-4xl font-semibold text-center mb-12">
      We offer creative✲ services to elevate your brand/
    </h2>
    <div class="max-w-7xl mx-auto grid gap-10 sm:grid-cols-2 lg:grid-cols-4">
      {services.map((service) => (
        <div key={service.title}>
          <h3 class="text-2xl font-bold mb-3">{service.title}</h3>
          <ul class="list-disc list-inside text-gray-600 space-y-1">
            {service.items.map((item) => (
              <li key={item}>{item}</li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </section>
</PagesLayout>