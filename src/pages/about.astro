---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="about us">
  <section id="about" class="py-24 bg-gray-50">
    <div class="max-w-7xl mx-auto px-6 text-center">
      <h2 class="text-3xl md:text-4xl font-semibold text-gray-900 mb-6">
        About Us
      </h2>
      <p class="text-lg text-gray-600 mb-12">
        We create beautiful and functional digital experiences.
      </p>
      <div class="flex justify-center gap-8">
        <div class="w-1/3">
          <img
            src="/path/to/image.jpg"
            alt="About image"
            class="w-full h-auto rounded-lg shadow-lg"
          />
        </div>
        <div class="w-2/3 text-left">
          <p class="text-lg text-gray-700">
            On time is a digital agency specializing in innovative web solutions
            that empower businesses to grow online. Our goal is to bring your
            vision to life with creativity and precision.
          </p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
