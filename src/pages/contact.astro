---
import ContactForm from "../components/ContactForm.jsx";
import BaseLayout from "../layouts/BaseLayout.astro";
import ContactHero from "../components/ContactHero.astro";
---

<BaseLayout title="Contact us">
  <ContactHero />
  <main class="max-w-7xl mx-auto py-20 px-6 md:px-20">
    <h1 class="text-5xl font-extrabold text-center mb-12">
      Get in touch with us
    </h1>

    <p class="max-w-3xl mx-auto text-center text-gray-600 mb-16">
      Have a project or question? We’re here to help. Fill out the form or reach
      us through the contact info below.
    </p>

    <div class="flex flex-col md:flex-row gap-16 max-w-5xl mx-auto">
      <ContactForm client:load />

      <aside
        class="flex-1 bg-white p-10 rounded-lg shadow-lg flex flex-col justify-center space-y-6 max-w-md mx-auto md:mx-0"
      >
        <h2 class="text-3xl font-semibold mb-4">Contact Information</h2>

        <p class="text-gray-700">
          <strong>Email:</strong>
          <a
            href="mailto:ONTIME@ontime.com"
            class="text-mostard hover:underline">ONTIME@ontime.com</a
          >
        </p>

        <p class="text-gray-700">
          <strong>Phone:</strong> +54 9 11 4143-0471
        </p>

        <p class="text-gray-700 mt-4">
          Feel free to reach out to us anytime. We’re excited to collaborate and
          create amazing projects together.
        </p>
      </aside>
    </div>
  </main>
</BaseLayout>
