---
import ContactForm from "../components/ContactForm.jsx";
import PagesLayout from "../layouts/PagesLayout.astro";
---

<PagesLayout title="Contact">
  <!-- Intro section -->
  <section class="text-center py-20 px-4">
    <h1 class="text-5xl md:text-6xl font-bold mb-6">
      Make Your Brand Unforgettable.
    </h1>
    <p class="max-w-3xl mx-auto text-lg text-gray-600 mb-8">
      It’s time to give your company the presence it deserves.
    </p>
    <p class="font-semibold text-xl">
      ONTIME@ontime.com&nbsp;·&nbsp;+33 (0)381262626
    </p>
  </section>

  <section class="bg-gray-100 py-16 px-4">
    <div class="max-w-4xl mx-auto grid gap-12 md:grid-cols-2">
      <div>
        <h2 class="text-3xl font-bold mb-6">Get in touch with us</h2>
        <p class="text-gray-600 mb-8">
          Have a project or question? We’re here to help. Fill out the form or
          reach us through the contact info below.
        </p>
        <ContactForm />
      </div>
      <div>
        <h2 class="text-3xl font-bold mb-6">Contact Information</h2>
        <p class="mb-4">
          <strong>Email:</strong> ONTIME@ontime.com
        </p>
        <p class="mb-4">
          <strong>Phone:</strong> +54&nbsp;9&nbsp;11&nbsp;4143‑0471
        </p>
        <p class="text-gray-600">
          Feel free to reach out to us anytime. We’re excited to collaborate and
          create amazing projects together.
        </p>
      </div>
    </div>
  </section>
</PagesLayout>
